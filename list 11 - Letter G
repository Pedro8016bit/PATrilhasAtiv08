using System;
	
namespace PATrilhasAtiv08
{
	class Program
	 {
		
	static string posi (string texto){
		string res = "";
		
	            for (int i = 1; i < texto.Length; i += 2)  
	            {
	                res += texto[i];  
	            }
	            
	      return res;
		
	}
	
	 public static void Main()
	        {
	 	
	 	Console.WriteLine("Digite uma string:");
	    string texto = Console.ReadLine();
	 	
	    string res = posi(texto);
	    
	    Console.WriteLine("Nova string contendo apenas os caracteres em posições ímpares: " + res);
    
           Console.Write("Press any key to continue. . . ");
            Console.ReadKey(true);
        }
    }
}
